<%= form_for(@checkin, multipart: true, remote: true) do |f| %>
   <% if @checkin.errors.any? %>
     <div id="error_explanation">
       <p><%= pluralize(@checkin.errors.count, "error") %> kept your checkin from being saved:</p>
 
       <ul>
       <% @checkin.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
       </ul>
     </div>
   <% end %>
 
   <%= f.hidden_field :location_id, value: @location.id %>
   <div class="field">
     <%= f.label :name %>
     <%= f.text_field :name, placeholder: "Name" %>
   </div>
   <div class="field">
     <%= f.label :comment %>
     <%= f.text_area :comment, cols: 40, rows: 2 %>
   </div>
   <div class="field">
     <%= f.label :photo %>
     <%= f.file_field :photo %>
   </div>
   <div class="actions">
     <%= f.submit 'Submit' %>
   </div>
 <% end %>
