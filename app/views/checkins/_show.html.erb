<div class="content_container">
  <p class="site1_title">
    <b>
      <%= @location.name %>
    </b>
  </p>
  <p class="site1_desc">
    <b>
      <%= @location.description %>
    </b>
  </p>
  <hr/>

  <%= render 'form' %>
  <div id="site-1">
    <% @location.checkins.each do |f| %> 
      <b><%= f.name %><b><br>
         <%= f.comment %><br>
         
           <%= image_tag f.photo.url(:medium) %><br><br>
         
      <% end %>
  </div>
</div>
 
