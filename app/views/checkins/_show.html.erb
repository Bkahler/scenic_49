<div class="content_header">
  <p class="site1_title">
    <b>
      <%= @location.name %>
    </b>
  </p>
  <button id="back_button" type="button" class="btn btn-default btn-sm">Back to map view</button>
  <p class="site1_desc">
    <b>
      <%= @location.description %>
    </b>
  </p>
  <hr/>
</div>

<div id="site-1">
  <%= render 'form' %>
  
  <br>
  <% @location.checkins.each do |f| %> 
    <b><%= f.name %><b><br>
       <%= f.comment %><br>
        <% if f.photo.present? %>
         <%= image_tag f.photo.url(:medium) %><br>
        <% end %>
    <br>
  <% end %>
</div>
 
